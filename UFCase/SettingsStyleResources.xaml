<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SettingsMicaCard" TargetType="Border" BasedOn="{StaticResource MicaCardBorder}">
        <Setter Property="Padding" Value="15" />
    </Style>
    <Style x:Key="SettingsMicaCardCommandLink" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="15" />
    </Style>
    <Style x:Key="SettingGroupHeader" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="Transitions">
            <Setter.Value>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
