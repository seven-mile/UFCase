<Page
    x:Class="UFCase.PackagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UFCase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <MenuFlyout x:Key="PackageItemActionsMenu" ShouldConstrainToRootBounds="False">
            <MenuFlyout.Items>
                <MenuFlyoutItem Text="Install">
                    <MenuFlyoutItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEC7A;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Stage">
                    <!--<MenuFlyoutItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe74d;" />
                    </MenuFlyoutItem.Icon>-->
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Remove">
                    <MenuFlyoutItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Apply Changes">
                    <MenuFlyoutItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE930;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Icon="More" Text="More..." />
            </MenuFlyout.Items>
        </MenuFlyout>
    </Page.Resources>

    <Pivot>
        <PivotItem Header="Installed">
            <SplitView
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DisplayMode="Inline"
                IsPaneOpen="True"
                OpenPaneLength="500"
                PanePlacement="Right">
                <SplitView.PaneBackground>
                    <SolidColorBrush Color="Transparent" />
                </SplitView.PaneBackground>
                <SplitView.Pane>
                    <ScrollViewer
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid
                            x:Name="FeatureInfoPanel"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Padding="20,0,20,0"
                                HorizontalAlignment="Stretch"
                                Orientation="Vertical">
                                <Border Margin="0,5,0,5" Style="{StaticResource MicaCardBorder}">
                                    <StackPanel
                                        Padding="15,10,20,15"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Vertical">
                                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}">
                                            <Run Text="{x:Bind PkgList.SelectedItem.(local:PackageViewModel.DetailName), Mode=OneWay}" />
                                            <Run
                                                FontSize="{StaticResource SecondaryTextFontSize}"
                                                Foreground="{StaticResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind PkgList.SelectedItem.(local:PackageViewModel.DetailIdentity), Mode=OneWay}" />
                                        </TextBlock>
                                        <TextBlock
                                            Style="{StaticResource SecondaryTextBlockStyle}"
                                            Text="{x:Bind PkgList.SelectedItem.(local:PackageViewModel.Description), Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <Button Click="Button_Click" Style="{StaticResource MicaCardCommandLink}">
                                    <Button.Content>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <FontIcon
                                                    Margin="5,0,15,0"
                                                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                    Glyph="&#xEC50;" />
                                                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Open File in Explorer" />
                                                    <TextBlock
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Style="{StaticResource CaptionTextBlockStyle}"
                                                        Text="Some package files may be available in your disk" />
                                                </StackPanel>
                                            </StackPanel>

                                            <FontIcon
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                Glyph="&#xe8a7;" />
                                        </Grid>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </SplitView.Pane>
                <ListView
                    x:Name="PkgList"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsItemClickEnabled="False"
                    ItemsSource="{x:Bind ViewModel.Packages, Mode=OneWay}"
                    SelectionMode="Single">
                    <ListView.Resources>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.Resources>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <ContentThemeTransition />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:PackageViewModel">
                            <ListViewItem RightTapped="ListViewItem_RightTapped">
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="24" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="{x:Bind ListName}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource SecondaryTextBlockStyle}"
                                        Text="{x:Bind ListIdentity}"
                                        TextTrimming="CharacterEllipsis"
                                        Visibility="{x:Bind ListIdentityVisibility}" />
                                    <!--  SecondaryTextFontSize  -->
                                    <Grid Grid.Row="2" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Column="0"
                                            Margin="3,0,3,0"
                                            Padding="2,0,2,0"
                                            Background="DarkOrange"
                                            CornerRadius="4,4,4,4">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource SecondaryTextBlockStyle}"
                                                Text="{x:Bind State}"
                                                TextTrimming="CharacterEllipsis" />
                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Margin="3,0,3,0"
                                            Padding="2,0,2,0"
                                            Background="DarkOrchid"
                                            CornerRadius="4,4,4,4">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="White"
                                                Style="{StaticResource SecondaryTextBlockStyle}"
                                                Text="{x:Bind ReleaseType}"
                                                TextTrimming="CharacterEllipsis" />
                                        </Border>
                                        <TextBlock
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource SecondaryTextBlockStyle}"
                                            Text="{x:Bind Description}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                    <Border
                                        Grid.Row="0"
                                        Grid.RowSpan="4"
                                        Grid.Column="1">
                                        <AppBarButton
                                            VerticalAlignment="Center"
                                            Flyout="{StaticResource PackageItemActionsMenu}"
                                            Icon="More"
                                            IsCompact="False"
                                            Label="More" />
                                    </Border>
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView>
        </PivotItem>

        <PivotItem Header="New">
            <Grid
                Margin="50"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AllowDrop="True">

                <Rectangle
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    RadiusX="20"
                    RadiusY="20"
                    Stroke="LightGray"
                    StrokeDashArray="1"
                    StrokeDashCap="Flat"
                    StrokeDashOffset="1.5"
                    StrokeThickness="3" />
                <SplitButton HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,5,0"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xe723;" />
                        <TextBlock Text="Drop or Select package" />
                    </StackPanel>
                    <SplitButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Select File">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe8a5;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Select Folder">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe838;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </SplitButton.Flyout>
                </SplitButton>

            </Grid>
        </PivotItem>
    </Pivot>

</Page>
