import "ImageProvider.idl";
import "PackageViewModel.idl";

namespace UFCase
{
    enum FeatureState
    {
        Invalid,
        Unavailable,
        Disabled,
        PartiallyEnabled,
        Enabled,
    };

    [bindable]
    [default_interface]
    runtimeclass FeatureTreeElement : Microsoft.UI.Xaml.Data.INotifyPropertyChanged
    {
        FeatureTreeElement(
            String sessionClient,
            String name, String desc, String identity, FeatureState state,
            Windows.Foundation.Collections.IObservableVector<FeatureTreeElement> children,
            ImageItem img
        );
        
        // CBS Component Data
        String Name{ get; set; };
        String Description{ get; set; };
        String Identity{ get; set; };
        FeatureState State{ get; set; };

        PackageViewModel Package{ get; };

        Windows.Foundation.Collections.IObservableVector<FeatureTreeElement> Children{ get; };

        String ModificationMark{ get; set; };
        Microsoft.UI.Xaml.Controls.IconSource Icon{ get; set; };
        Microsoft.UI.Xaml.Controls.Primitives.FlyoutBase ContextMenu{ get; set; };
    }
}
